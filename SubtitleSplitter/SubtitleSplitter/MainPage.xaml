<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubtitleSplitter.MainPage">

    <!-- Main layout grid -->
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scrollable text input area -->
        <ScrollView Grid.Row="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Entry x:Name="InputTextBox" Placeholder="Enter text here..." VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
                   AutomationProperties.Name="Text Input Area" />
        </ScrollView>

        <!-- Import file button -->
        <Button Grid.Row="1" x:Name="ImportButton" Text="Import File" Clicked="OnImportClicked" VerticalOptions="Start" 
                AutomationProperties.Name="Import File Button" />
    </Grid>

</ContentPage>