<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubtitleSplitter.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry x:Name="InputTextBox" Placeholder="Enter text here..." />

            <Button x:Name="ImportButton" Text="Import File" Clicked="OnImportClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
